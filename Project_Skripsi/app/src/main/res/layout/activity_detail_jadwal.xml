<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DetailJadwal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tbIndex"
            android:background="@color/colorPrimary"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:title="Detail Jadwal"
            ></androidx.appcompat.widget.Toolbar>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
           >
            <com.zolad.zoominimageview.ZoomInImageView
                android:layout_width="390dp"
                android:layout_height="250dp"
                android:layout_margin="3dp"
                android:layout_gravity="center"
                android:id="@+id/gambar"/>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvLihat"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            app:cardElevation="5dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_margin="10dp"
                    android:drawableStart="@drawable/ic_forum_black_24dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Masuk ke Forum"
                    android:layout_marginLeft="-5dp"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold"
                    />
            </LinearLayout>

        </androidx.cardview.widget.CardView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:id="@+id/idnya"/>



        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="380dp"
            app:cardElevation="5dp">
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
          >


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                app:cardElevation="5dp"
                android:layout_marginBottom="10dp"
                >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp"
                android:layout_gravity="left"
                android:layout_marginLeft="10dp">
                <TextView
                    android:layout_width="45dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/cardview_dark_background"
                    android:text="Dibuat "/>
                <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:layout_marginBottom="3dp"
                    android:textColor="@color/colorPrimary"
                    android:id="@+id/tNamam" />
            </LinearLayout>


            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="125dp"
                android:layout_height="20dp"
                android:orientation="horizontal"
                android:id="@+id/belum"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="15dp"
                android:layout_marginBottom="4dp"
                android:layout_gravity="left"
                android:padding="2dp"
                android:background="@drawable/btnsecondary">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:layout_marginTop="-3dp"
                    android:text="Belum Berlangsung"
                    android:textColor="@color/colorPrimary"
                    android:textSize="11dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:drawableStart="@drawable/ic_report_black_24dp"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="125dp"
                android:layout_height="20dp"
                android:orientation="horizontal"
                android:id="@+id/selesai"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="15dp"
                android:layout_marginBottom="4dp"
                android:layout_gravity="left"
                android:padding="2dp"
                android:background="@drawable/bttnnyabu"
                android:visibility="gone">
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorThird"
                    android:textStyle="bold"
                    android:text="Sudah Berlangsung"
                    android:textSize="11dp"
                    android:layout_marginLeft="3dp"
                    android:layout_marginTop="-3dp"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:drawableStart="@drawable/ic_check_circle"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="7dp"
                android:padding="3dp"
                android:layout_marginLeft="10dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_supervisor_account_black_24dp"/>

                <TextView
                    android:layout_marginTop="4dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:id="@+id/tNama"
                    android:textSize="18dp"
                    android:textColor="@color/cardview_dark_background"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="3dp"
                android:layout_marginLeft="10dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_message_black_24dp"

                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tKet"
                    android:paddingBottom="4dp"
                    android:layout_marginTop="3dp"
                    android:textStyle="bold"
                    android:textColor="@color/cardview_dark_background"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="7dp"
                android:padding="3dp"
                android:layout_marginLeft="10dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/tanggal"
                    />

                <TextView
                    android:layout_marginTop="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tTanggal"
                    android:textStyle="bold"
                    android:textColor="@color/cardview_dark_background"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="7dp"
                android:padding="3dp"
                android:layout_marginLeft="10dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/time"
                    />

                <TextView
                    android:layout_marginTop="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tJam"
                    android:textStyle="bold"
                    android:textColor="@color/cardview_dark_background"
                     />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="7dp"
                android:padding="3dp"
                android:layout_marginLeft="10dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/lokasi"

                    />
                <TextView
                    android:layout_marginTop="1dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tLokasi"
                    android:textColor="@color/colorThird"
                    android:textAlignment="inherit"
                    />

            </LinearLayout>


        </LinearLayout>
            </ScrollView>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</LinearLayout>