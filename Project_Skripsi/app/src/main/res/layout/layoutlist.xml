<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    app:cardElevation="5dp"
    android:layout_margin="4dp">

    <LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

        <ImageView
            android:layout_width="120dp"
            android:layout_height="110dp"
            android:id="@+id/imgView"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_marginTop="-10dp"
            android:padding="10dp"
            android:orientation="vertical">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                android:layout_marginTop="8dp"
                android:id="@+id/tvNama" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="3dp"
               >
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="11dp"
                    android:textColor="@color/cardview_dark_background"
                    android:id="@+id/tvLokasi"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold"
                    android:textSize="11dp"
                    android:layout_marginLeft="2dp"
                    android:id="@+id/tvJarak"/>


            </LinearLayout>

                <TextView
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    android:textSize="11dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="3dp"
                    android:id="@+id/tvWaktu"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


            <LinearLayout
                android:layout_width="125dp"
                android:layout_height="20dp"
                android:orientation="horizontal"
                android:id="@+id/selesai"
                android:layout_marginTop="5dp"
                android:padding="2dp"
                android:background="@drawable/bttnnyabu"
                android:visibility="gone">
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorThird"
                    android:textStyle="bold"
                    android:text="Sudah Berlangsung"
                    android:textSize="11dp"
                    android:layout_marginLeft="3dp"
                    android:layout_marginTop="-3dp"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:drawableStart="@drawable/ic_check_circle"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="125dp"
                android:layout_height="20dp"
                android:orientation="horizontal"
                android:id="@+id/belum"
                android:layout_marginTop="5dp"
                android:padding="2dp"
                android:background="@drawable/btnsecondary">
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold"
                    android:text="Belum Berlangsung"
                    android:textSize="11dp"
                    android:layout_marginLeft="3dp"
                    android:layout_marginTop="-3dp"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:drawableStart="@drawable/ic_report_black_24dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Button
                    android:layout_width="75dp"
                    android:layout_height="25dp"
                    android:padding="5dp"
                    android:text="Forum"
                    android:visibility="gone"
                    android:textColor="@color/cardview_light_background"
                    android:background="@drawable/btnnya"
                    android:textStyle="bold"
                    android:textSize="11dp"
                    android:drawableStart="@drawable/ic_group_black_24dp"
                    android:id="@+id/btnForum"

                    />
                <Button
                    android:layout_width="75dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="10dp"
                    android:padding="5dp"
                    android:text="Detail"
                    android:visibility="gone"
                    android:textColor="@color/cardview_light_background"
                    android:background="@drawable/btnnya"
                    android:textStyle="bold"
                    android:textSize="11dp"
                    android:drawableStart="@drawable/ic_info_outline_black_24dp"
                    android:id="@+id/btnDetail"
                 />
                <TextView
                    android:layout_width="25dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:visibility="gone"
                    android:id="@+id/btnUbah"
                    android:drawableStart="@drawable/ic_create_black_24dp"/>

                <TextView
                    android:layout_width="25dp"
                    android:layout_height="20dp"
                    android:id="@+id/btnHapus"
                    android:visibility="gone"
                    android:layout_marginLeft="2dp"
                    android:layout_marginTop="5dp"
                    android:drawableStart="@drawable/ic_delete_black_24dp"/>
            </LinearLayout>
            </LinearLayout>


        </LinearLayout>



    </LinearLayout>
</androidx.cardview.widget.CardView>