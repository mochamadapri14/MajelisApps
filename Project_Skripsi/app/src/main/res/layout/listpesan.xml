<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    >
    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/imgView"
        android:layout_margin="5dp"/>

<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/activity_horizontal_margin"
    app:cardElevation="3dp"
    android:id="@+id/cdPesan"
    android:layout_margin="5dp"
    app:cardBackgroundColor="@color/quantum_vanillagreen100"
    >
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
       >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:id="@+id/tvNamaP"
                android:textColor="@color/cardview_dark_background"
                android:textStyle="bold"
                android:text="Hasan alhaddad"
                android:textSize="15dp"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="3dp"
                />

            <TextView

                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:id="@+id/tvWaktu"
                android:layout_marginTop="-7dp"
                android:layout_marginLeft="6dp"
                android:textSize="10dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableEnd="@drawable/ic_close_"
                android:layout_marginTop="-5dp"
                android:id="@+id/hapus"/>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvLevel"
            android:layout_marginTop="-5dp"
            android:visibility="gone"
            android:text="Pengurus Majelis"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="5dp"
            android:textSize="10dp"

            />
        <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
            android:textColor="@color/cardview_dark_background"
        android:id="@+id/tvPesan"
            android:layout_marginLeft="5dp"
        />

    </LinearLayout>

</androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/activity_horizontal_margin"
        app:cardElevation="3dp"
        android:id="@+id/cdPesan2"
        android:layout_margin="5dp"
        android:visibility="gone"
        app:cardBackgroundColor="@color/biru"
        >


    </androidx.cardview.widget.CardView>

</LinearLayout>